<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/futures_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/futures_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="期权" />

                <TextView
                    android:id="@+id/futures_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/futures_name_text"
                    android:text="大豆1611"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/futures_num_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/futures_num_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="数量" />

                <TextView
                    android:id="@+id/futures_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/futures_num_text"
                    android:text="10"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/futures_delta_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/futures_delta_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delta" />

                <TextView
                    android:id="@+id/futures_delta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/futures_delta_text"
                    android:text="0.8888"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/safety"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:background="@color/safe" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
